{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineWidth": 120,
		"indentStyle": "space",
		"indentWidth": 2,
		"ignore": [
			"**/*.min.js",
			"**/build/*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"arrowParentheses": "asNeeded",
			"trailingComma": "es5",
			"quoteProperties": "asNeeded"
		}
	}
}