  },
  "devDependencies": {
    "@biomejs/biome": "~1.7.0",
    "@jest/globals": "^29.7.0",
    "@types/klaw-sync": "~6.0.5",
    "@types/node": "~20.12.7",
    "@types/semver": "~7.5.8",
    "jest": "^29.7.0",
    "nodemon": "~3.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "~10.9.2",
    "typescript": "~5.4.5"
  }
